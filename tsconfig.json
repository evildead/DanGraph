{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "module": "CommonJS",
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declaration": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./build"
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": ["**/*.spec.ts"]
}
